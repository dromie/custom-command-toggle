    <!-- Toggle 1 Settings -->
    <key name="toggle1-command-on" type="s">
      <default>'notify-send "Custom Command Toggle" "Hello world!"'</default>
      <summary>Toggle 1 ON command</summary>
    </key>
    <key name="toggle1-command-off" type="s">
      <default>""</default>
      <summary>Toggle 1 OFF command</summary>
    </key>
    <key name="toggle1-title" type="s">
      <default>"My Button"</default>
      <summary>Toggle 1 name</summary>
    </key>
    <key name="toggle1-icons" type="s">
      <default>"face-smile-symbolic"</default>
      <summary>Toggle 1 icon</summary>
    </key>
    <key name="toggle1-initialstate" type="i">
      <default>2</default>
      <summary>Toggle 1 state at startup</summary>
      <description>0 = On; 1 = Off; 2 = Previous state; 3 = Check command output for state</description>
    </key>
    <key name="toggle1-state" type="b">
      <default>false</default>
      <summary>Toggle 1 current state</summary>
    </key>
    <key name="toggle1-checkcommand" type="s">
      <default>""</default>
      <summary>Toggle 1 check state command</summary>
      <description>Command to check state at startup and command sync</description>
    </key>
    <key name="toggle1-checkregex" type="s">
      <default>""</default>
      <summary>Toggle 1 search term</summary>
      <description>String to search for in the command output to set ON state</description>
    </key>    
    <key name="toggle1-runcommandatboot" type="b">
      <default>false</default>
      <summary>Toggle 1 run command at boot setting</summary>
    </key>
    <key name="toggle1-delaytime" type="i">
      <default>3</default>
      <summary>Toggle 1 run command at boot delay setting</summary>
    </key>
    <key name="toggle1-checkcommanddelaytime" type="i">
      <default>3</default>
      <summary>Toggle 1 check command state at boot delay setting</summary>
    </key>
    <key name="toggle1-checkcommandsync" type="b">
      <default>false</default>
      <summary>Check toggle 1 command output at regular intervals</summary>
    </key>
    <key name="toggle1-checkcommandinterval" type="i">
      <default>10</default>
      <summary>Check toggle 1 command output interval in seconds</summary>
    </key>
    <key name="toggle1-showindicator" type="b">
      <default>true</default>
      <summary>Toggle 1 show top bar indicator setting</summary>
    </key>
    <key name="toggle1-buttonclick" type="i">
      <default>2</default>
      <summary>Toggle 1 action setting</summary>
      <description>0 = Always On; 1 = Always Off; 2 = Toggle On/Off</description>
    </key>
    <key name="toggle1-closemenu" type="b">
      <default>false</default>
      <summary>Toggle 1 close menu setting</summary>
    </key>
    <key name="toggle1-keybinding" type="as">
      <default><![CDATA[['']]]></default>
      <summary>Toggle 1 keyboard shortcut</summary>
    </key>
    <key name="toggle1-checkexitcode" type="b">
      <default>false</default>
      <summary>Toggle 1 check exit code setting</summary>
    </key>
    <key name="toggle1-enabled" type="b">
      <default>true</default>
      <summary>Enable or disable toggle 1</summary>
    </key>

